// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  username     String
  name         String?
  phone        String?
  countryCode  Int?
  password     String
  transactions Transaction[]
}

model Transaction {
  id         Int  @id @default(autoincrement())
  balance    Int
  deposit    Int
  withdrawal Int
  userId     Int
  User       User @relation(fields: [userId], references: [id])
}

enum Role {
  SuperAdmin
  Admin
  User
}
